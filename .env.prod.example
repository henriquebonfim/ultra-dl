# Production Environment Configuration
# Copy this file to .env.prod and update with your production values

# Flask Configuration
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
FLASK_DEBUG=false

# API Configuration
API_VERSION=v1
API_BASE_URL=https://your-domain.com
DOWNLOAD_BASE_URL=https://your-domain.com

# Security
SECRET_KEY=generate-with-openssl-rand-hex-32-CHANGE-THIS
REDIS_PASSWORD=generate-strong-password-CHANGE-THIS

# Redis Configuration
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/0
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_SOFT_TIME_LIMIT=1800
CELERY_TASK_TIME_LIMIT=2400

# Rate Limiting Configuration
RATE_LIMIT_DAILY=200
RATE_LIMIT_HOURLY=50
RATE_LIMIT_STORAGE_URL=redis://:your-redis-password@redis:6379/0

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Google Cloud Storage Configuration (Required for production)
GCS_BUCKET_NAME=your-gcs-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/app/gcs-credentials.json
GCS_CREDENTIALS_PATH=./gcs-credentials.json

# SocketIO Configuration
SOCKETIO_ENABLED=true

# File Storage Configuration
FILE_TTL_MINUTES=10
JOB_TTL_SECONDS=3600
TEMP_DOWNLOAD_DIR=/tmp/ultra-dl

# Logging
LOG_LEVEL=INFO

# Frontend Configuration
VITE_API_URL=https://your-domain.com
FRONTEND_PORT=80
