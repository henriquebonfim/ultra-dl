# Flask Configuration
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
FLASK_DEBUG=true

# API Configuration
API_VERSION=v1

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_CONCURRENCY=2
# Task time limits in seconds (soft limit triggers graceful timeout, hard limit kills task)
CELERY_TASK_SOFT_TIME_LIMIT=1800  # 30 minutes - allows slow downloads
CELERY_TASK_TIME_LIMIT=2400        # 40 minutes - hard limit

# SocketIO Configuration (Optional - for real-time updates)
SOCKETIO_ENABLED=true

# File Storage Configuration
DOWNLOAD_DIR=/tmp/ultra-dl
FILE_TOKEN_TTL=600
JOB_TTL=3600
